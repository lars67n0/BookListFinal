@page
@model BookListFinal.Pages.Teachers.TeacherIndexModel
@{
}

<h1>List Of Teachers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teachers[0].Initialer)
            </th>
           
            <th></th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Teachers)
        {
            <tr>
                <td style="border-top:solid black">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td style="border-top:solid black" >
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td style="border-top:solid black">
                    @Html.DisplayFor(modelItem => item.Initialer)
                </td>
               
                <td style="border-top:solid black">
                    <a asp-page="./Update" asp-route-id="@item.Id">Edit</a>
                    @*<a asp-page="./Details" asp-route-id="@item.Id">Details</a>*@
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>