@page
@model BookListFinal.Pages.Classes.ClassIndexModel
@{
}
<h1>List Of Classes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Classes[0].ClassName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classes[0].SemesterYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Classes[0].TeacherName)
            </th>

            <th></th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Classes)
        {
            <tr>
                <td style="border-top:solid black">
                    @Html.DisplayFor(modelItem => item.ClassName)
                </td>
                <td style="border-top:solid black">
                    @Html.DisplayFor(modelItem => item.SemesterYear)
                </td>
                <td style="border-top:solid black">
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>

                <td style="border-top:solid black">
                    <a asp-page="./Update" asp-route-id="@item.Id">Edit</a>
                    @*<a asp-page="./Details" asp-route-id="@item.Id">Details</a>*@
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>