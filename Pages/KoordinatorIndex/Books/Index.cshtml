@page
@model BookListFinal.Pages.Books.BookIndexModel
@{
}
<h1>List Of Books</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class=" table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].AuthorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].PublishYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Description)
            </th>
            <th></th>

        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.Books)
            {
        <tr>
            <td style="border-top:solid black">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td style="border-top:solid black">
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td style="border-top:solid black">
                @Html.DisplayFor(modelItem => item.PublishYear)
            </td>
            <td style="border-top:solid black">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td style="border-top:solid black">
                <a asp-page="./Update" asp-route-id="@item.Id">Edit</a>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
            }
    </tbody>
</table>