@page
@model BookListFinal.Pages.Books.BookUpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update Book</h1>

<h4>Books</h4>
<hr />

<div class="row">
    <div class=" col-md-4">

        <form method="post">
            <div asp-validation-summary="All" class=" text-danger">
                <input type="hidden" asp-for=" Books.Id" />

                <div class=" form-group">
                    <label asp-for="Books.PublishYear" class="control-label"></label>
                    <input asp-for=" Books.PublishYear" class=" form-control" />
                    <span asp-validation-for="Books.PublishYear" class=" text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Books.AuthorName" class="control-label"></label>
                    <input asp-for=" Books.AuthorName" class=" form-control" />
                    <span asp-validation-for="Books.AuthorName" class=" text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Books.Title" class="control-label"></label>
                    <input asp-for=" Books.Title" class=" form-control" />
                    <span asp-validation-for="Books.Title" class=" text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Books.Description" class="control-label"></label>
                    <input asp-for=" Books.Description" class=" form-control" />
                    <span asp-validation-for="Books.Description" class=" text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

</div>
<h5>Return To List</h5>
<div>
    <a asp-page=" ./index">Back To List</a>
</div>