@page
@model BookListFinal.Pages.Teachers.TeacherUpdateModel
@{
    ViewData["Title"] = "Update";
}

<h1>Update Teachers</h1>

<h4>Teacher Chosen : </h4>
<hr />

<div class="row">
    <div class=" col-md-4">

        <form method="post">
            <div asp-validation-summary="All" class=" text-danger">
                <input type="hidden" asp-for=" Teachers.Id" />

                <div class=" form-group">
                    <label asp-for="Teachers.FirstName" class="control-label"></label>
                    <input asp-for=" Teachers.FirstName" class=" form-control" />
                    <span asp-validation-for="Teachers.FirstName" class=" text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Teachers.LastName" class="control-label"></label>
                    <input asp-for=" Teachers.LastName" class=" form-control" />
                    <span asp-validation-for="Teachers.LastName" class=" text-danger"></span>
                </div>

                <div class=" form-group">
                    <label asp-for="Teachers.Initialer" class="control-label"></label>
                    <input asp-for=" Teachers.Initialer" class=" form-control" />
                    <span asp-validation-for="Teachers.Initialer" class=" text-danger"></span>
                </div>



                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

    <hr />
</div>
<h5>Return To List</h5>
<div>
    <a asp-page=" ./index">Back To List</a>
</div>